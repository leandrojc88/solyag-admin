{#
    {modal_id, title }
#}
<div class="modal fade" id="{{modal_id}}" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="{{modal_id}}_label__id" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header bg-dark">
				<h4 class="modal-title text-light" id="{{modal_id}}_label__id">{{ title }}</h4>
				<button class="close text-light" type="button" data-dismiss="modal" aria-label="Cerrar">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div
				class="modal-body bg-dark-app">

				{# ----------- Body --------- #}
				{% block modalbody %}{% endblock %}

				{# ----------- Footer --------- #}
				{% block modalfooter %}
					<div class="d-flex mt-4">
						<button class="btn btn-outline-secondary mr-auto" type="button" data-dismiss="modal" aria-hidden="true">Cancelar
						</button>
						{% block btnzone %}
							<button type="button" class="my-0 btn btn-secondary" id="{{modal_id}}_btn__aceptar">Aceptar</button>
						{% endblock %}
					</div>
				{% endblock %}
			</div>
		</div>
	</div>
</div>
