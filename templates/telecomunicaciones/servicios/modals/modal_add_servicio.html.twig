{% extends 'utils/modal_form.html.twig' %}
{% block modalbody %}
	<form method="post" class="text-left" id="form_servicios_post" action="{{ url('telecomunicaciones-post-servicio') }}">
		<div class="form-group input-group input-group-sm d-block">
			<label for="servicios_nombre" class="required">Nombre</label>
			<input type="text" id="servicios_nombre" name="nombre" required="required" class="form-control w-100 form-control">
		</div>
		<div class="form-group input-group input-group-sm d-block">
			<label for="servicios_abreviatura" class="required">Abreviatura</label>
			<input type="text" id="servicios_abreviatura" name="abreviatura" required="required" class="form-control w-100 form-control">
		</div>
	</form>
{% endblock %}


{% block btnzone %}
	<button type="submit" form="form_servicios_post" class="my-0 btn btn-secondary">Aceptar</button>
{% endblock %}
