{% extends 'telecomunicaciones/base.html.twig' %}

{% block title %}Telecomunicaciones | empresas
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<style>
		.b-card {
			border: 1px #a5a5a5 solid;
			border-radius: 5px;
			margin: 5px 2px;
			padding: 0.5rem 1rem;
			background: #404040;
		}

		.icon-img {
			height: 24px;
			width: auto;
		}
	</style>
	<link href="{{ asset('css/components/toggle-switch.css') }}" type="text/css" rel="stylesheet"/>
{% endblock %}

{% block content %}

	{{ include('telecomunicaciones/empresas/modal/modal-asignar-saldo-empresa.html.twig',{title:'Asignar saldo a la empresa empresa'}) }}

	{# header #}
	<div class="container">
		<div class="d-flex align-items-center">
			<h4 class="mr-auto display-4 mb-0 mr-auto title-table text-light">
				Empresas
			</h4>
			<div>
				<button type="button" onclick="execDTone()">enviar</button>
			</div>
		</div>
		{# end header #}
		<section>
			{% for item in empresas %}
				{{ include ("telecomunicaciones/empresas/components/row-empresa.html.twig", {
					empresa: item
				}) }}
			{% endfor %}
		</section>
	</div>
{% endblock %}


{% block javascripts %}
	{{ parent() }}

	<script src="{{ asset('js/Telecomunicaciones/EmpresaTipoPaga/init.js') }}"></script>
	<script src="{{ asset('js/Telecomunicaciones/EmpresaTipoPaga/validate-form-saldo.js') }}"></script>

	<script src="{{ asset('js/Telecomunicaciones/EmpresaTipoPaga/func/asignar-saldo-empresa.js') }}"></script>
	<script src="{{ asset('js/Telecomunicaciones/EmpresaTipoPaga/events/editar-tipo-pago-empresa.js') }}"></script>
	<script src="{{ asset('js/Telecomunicaciones/EmpresaTipoPaga/draw/draw.js') }}"></script>
	<script src="{{ asset('js/Telecomunicaciones/EmpresaTipoPaga/func/exec-dtone.js') }}"></script>
{% endblock %}
