{% extends 'utils/modal_form.html.twig' %}
{% block modalbody %}
	<form method="post" action="{{ url('remesas-monedas-asociar') }}" class="text-left" id="form_add_moneda">
		<div class="form-group input-group input-group-sm w-100">
			<label for="pais" class="required">Pais</label>
			<select name="pais" id="pais" required="required" class="w-100 form-control">
				<option selected="false" disabled value="0">-- seleccionar --</option>
				{% for pais in paises %}
					<option value="{{pais.id}}">{{pais.nombre}}</option>
				{% endfor %}
			</select>
		</div>

		<div class="form-group input-group input-group-sm d-block">
			<label for="moneda" class="required">Moneda</label>
			<input type="text" autocomplete="off" id="moneda" name="moneda" required="required" class="form-control w-100">
		</div>
		<div class="form-group input-group input-group-sm d-block">
			<label for="valor" class="required">Valor de referencia</label>
			<input type="text" autocomplete="off" id="valor" name="valor" required="required" class="form-control w-100">
		</div>
		<input id="empresa" name="empresa" hidden>
	</form>
{% endblock %}

{% block btnzone %}
	<button type="submit" form="form_add_moneda" class="my-0 btn btn-secondary">Aceptar</button>
{% endblock %}
