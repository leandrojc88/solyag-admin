<div class="modal fade" id="modal__reset__form__id" tabindex="-1" role="dialog"
     data-backdrop="static"
     data-keyboard="false"
     aria-labelledby="modal__reset__form__label__id" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark">
                <h4 class="modal-title text-light" id="modal__reset__form__label__id">Resetear contrase√±a</h4>
                <button class="close text-light" type="button" data-dismiss="modal" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body bg-dark-app">
                {{ form_start(form_reset,{'attr': {'class': 'text-left','id':'form_modal_target_reset','method':'POST','autocomplete':"off"}}) }}
                <div class="form-group input-group input-group-sm d-block">
                    {{ form_label(form_reset.password) }}
                    {{ form_widget(form_reset.password,{'attr': {'class': 'form-control w-100'}}) }}
                    {{ form_label(form_reset.repeat_password) }}
                    {{ form_widget(form_reset.repeat_password,{'attr': {'class': 'form-control w-100'}}) }}
                    <input type="text" id="id_usuario_reset" hidden>
                    <label for="" class="mt-1 text-center text-warning" id="label_error"></label>
                </div>
                {{ form_end(form_reset) }}
                <div class="d-flex mt-4">
                    <button class="btn btn-outline-secondary mr-auto" type="button" data-dismiss="modal"
                            aria-hidden="true">Cancelar
                    </button>
                    <button type="button" class="my-0 btn btn-warning" id="modal__btn__reset">Actualizar</button>
                </div>
            </div>
        </div>
    </div>
</div>